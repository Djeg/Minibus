{
    "name": "knplabs/minibus",
    "description": "Minibus is a simple implementation of a workflow bus.",
    "require-dev": {
        "phpspec/phpspec": "~2.0",
        "phpspec/nyan-formatters": "*",
        "bossa/phpspec2-expect": "*",
        "twig/twig": "~1.16@dev",
        "jms/serializer": "^1.0",
        "symfony/http-foundation": "~2.4",
        "symfony/routing": "~2.4",
        "behat/behat": "^3.0@dev"
    },
    "license": "WTFPL",
    "authors": [
        {
            "name": "David Jegat",
            "email": "david.jegat@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4",
        "symfony/event-dispatcher": "~2.4",
        "symfony/options-resolver": ">=2.4,<2.7",
        "symfony/config": "~2.4",
        "symfony/console": ">=2.4,<2.7",
        "symfony/yaml": ">=2.4,<2.7"
    },
    "config": {
        "bin-dir": "bin"
    },
    "suggest": {
        "twig/twig": "For the twig terminus",
        "jms/serializer": "For the serializer terminus",
        "symfony/http-foundation": "For using http terminus",
        "symfony/routing": "For using route redirection terminus"
    },
    "autoload": {
        "psr-0": {"": "src", "example": "", "Context": "features"}
    }
}
